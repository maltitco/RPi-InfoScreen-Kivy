<Label>:
    text_size: self.size
    valign: "middle"
    halign: "center"

<TubeScreen>:
    FloatLayout:
        id: tubefloat

        BoxLayout:
            orientation: "vertical"

            BGLabel:
                size_hint_y: 0.7
                font_size: 20
                text: "Live London Travel Status"
                bgcolour: 65/255., 75/255., 86/255., 1

            BoxLayout:
                orientation: "horizontal"

                BGLabel:
                    text: "Bakerloo"
                    size_hint: 0.15, 1
                    color: root.tube["colours"]["BAK"]["text"]
                    bgcolour: root.tube["colours"]["BAK"]["background"]

                BGLabelButton:
                    id: lbl_bakerloo
                    text: str(root.tube["BAK"])
                    size_hint: 0.35, 1
                    bgcolour: .2, .2, .2, 1
                    on_press: root.show_info("BAK")

                BGLabel:
                    text: "Northern"
                    size_hint: 0.15, 1
                    color: root.tube["colours"]["NOR"]["text"]
                    bgcolour: root.tube["colours"]["NOR"]["background"]

                BGLabelButton:
