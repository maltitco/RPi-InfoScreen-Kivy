<TubeDetail>
    id: tube_detail_info

    size: 400, 150
    size_hint: None, None
    center: 400, 240
    orientation: "vertical"

    canvas.before:
        Color:
            rgb: 134/255.,143/255.,152/255.
        Rectangle:
            size: 410, 160
            pos: 195, 160

    BGLabelButton:
        text: root.line
        bgcolour: root.bg
        color: root.fg
        size_hint_y: 0.2
        on_press: root.parent.remove_widget(root)

    BGLabelButton:
        text: root.detail
        bgcolour: .2,.2,.2,1
        on_press: root.parent.remove_widget(root)
