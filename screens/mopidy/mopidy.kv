<MopidyConnectedScreen>:
    id: main_layout

    AsyncImage:
        size: main_layout.size
        id: image_background
        allow_stretch: True
        keep_ratio: False

    BoxLayout:
        orientation: 'vertical'
        size: main_layout.size
        padding: [50, 0, 50, 0]

        canvas.before:
            Color:
                rgba: 0, 0, 0, 0.85
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1

            Label:
                id: current_screen
                text: "aktualny"
                markup: True
                font_size: '30sp'

            Label:
                id: next_screen
                text: "nastepny"

        ScreenManager:
            id: screen_manager
            size_hint_y: 0.9

<NowPlayingMainScreen>

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.8

            ScreenManager:
                id: screen_manager

            ListView:
                id: list_view

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1

            Image:
                id: previous_button

            Image:
                id: play_pause_button

            Image:
                id: next_button

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1

            Label:
                id: current_pos
                text: "0:00"
                size_hint_x: 0.1

            Slider:
                id: slider
                size_hint_x: 0.8

            Label:
                id: duration
                text: "0:00"
                size_hint_x: 0.1

<NowPlayingScreenSong>:

    BoxLayout:
        orientation: 'vertical'
        AsyncImage:
            id: image
            size_hint_y: 1
            size_hint_x: 1
            allow_stretch: True
            keep_ratio: True

        BoxLayout:
            orientation: 'vertical'
            Label:
                id: title
                text: "Tytu≈Ç"

            Label:
                id: album
                text: "Album"

            Label:
                id: artist
                text: "Artysta"

<LibraryScreen>
    ListView:
        id: list_view

<MopidyListItem>
    deselected_color: 0, 0, 0, 0
